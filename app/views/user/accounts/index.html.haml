%h1= "Accounts for Login \##{params[:login_id]}"

%table.table.table-striped
  %thead
    %tr
      %td Name
      %td Balance
      %td Currency
      %td Type
      %td Card
  %tbody
    - @accounts.each do |account|
      %tr
        %td= link_to account['name'], user_login_account_transactions_path(params[:login_id], account['id'])
        %td= account['balance']
        %td= account['currency_code']
        %td= account['nature']
        %td= account['extra']['card_type']

= link_to 'Back', user_logins_path, class: 'btn'